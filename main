interface CertificateDetails {
  studentName: string;
  collegeName: string;
  registrationNo: string;
  issuedBy: string;
  issuedDate: string;
  lastUpdated: string;
  trainingDuration: string;
  status: string;
}

const CertificateVerification = () => {
  const [certificateNo, setCertificateNo] = useState("");
  const [certificateDetails, setCertificateDetails] = useState<CertificateDetails | null>(null);
  const [isLoading, setIsLoading] = useState(false);
  const { toast } = useToast();

  const handleVerify = async () => {
    if (!certificateNo.trim()) {
      toast({
        title: "Error",
        description: "Please enter a certificate number",
        variant: "destructive"
      });
      return;
    }

    setIsLoading(true);
    
    // Simulate API call delay
    setTimeout(() => {
      const details = certificateData[certificateNo.toUpperCase() as keyof typeof certificateData];
      
      if (details) {
        setCertificateDetails(details);
        toast({
          title: "Certificate Found",
          description: "Certificate details retrieved successfully",
        });
      } else {
        setCertificateDetails(null);
        toast({
          title: "Certificate Not Found",
          description: "Please check the certificate number and try again",
          variant: "destructive"
        });
      }
      setIsLoading(false);
    }, 1000);
  };

  const formatDate = (dateString: string) => {
    return new Date(dateString).toLocaleDateString('en-US', {
      year: 'numeric',
      month: 'long',
      day: 'numeric'
    });
  };

  return (
    <div className="min-h-screen bg-background py-12 px-4">
      <div className="max-w-4xl mx-auto">
        {/* Header */}
        <div className="text-center mb-12">
          <div className="flex justify-center mb-6">
            <div className="bg-gradient-primary p-4 rounded-full shadow-elegant">
              <Award className="w-12 h-12 text-primary-foreground" />
            </div>
          </div>
          <h1 className="text-4xl font-bold bg-gradient-primary bg-clip-text text-transparent mb-4">
            Certificate Verification Portal
          </h1>
          <p className="text-muted-foreground text-lg max-w-2xl mx-auto">
            Enter your certificate number to verify and view your training certificate details
          </p>
        </div>

        {/* Search Form */}
        <Card className="mb-8 shadow-soft border-0 bg-card/50 backdrop-blur-sm">
          <CardHeader>
            <CardTitle className="flex items-center gap-2 text-foreground">
              <Search className="w-5 h-5" />
              Certificate Lookup
            </CardTitle>
          </CardHeader>
          <CardContent>
            <div className="flex gap-4">
              <div className="flex-1">
                <Input
                  placeholder="Enter certificate number (e.g., CERT001)"
                  value={certificateNo}
                  onChange={(e) => setCertificateNo(e.target.value)}
                  className="h-12 text-lg border-border/50 focus:border-primary"
                  onKeyPress={(e) => e.key === 'Enter' && handleVerify()}
                />
              </div>
              <Button 
                onClick={handleVerify}
                disabled={isLoading}
                className="h-12 px-8 bg-gradient-primary hover:shadow-elegant transition-all duration-300"
              >
                {isLoading ? (
                  <div className="w-5 h-5 border-2 border-primary-foreground/30 border-t-primary-foreground rounded-full animate-spin" />
                ) : (
                  <>
                    <Search className="w-5 h-5 mr-2" />
                    Verify
                  </>
                )}
              </Button>
            </div>
          </CardContent>
        </Card>

        {/* Certificate Details */}
        {certificateDetails && (
          <Card className="shadow-elegant border-0 bg-card animate-fade-in">
            <CardHeader className="bg-gradient-primary text-primary-foreground rounded-t-lg">
              <div className="flex items-center justify-between">
                <CardTitle className="text-2xl flex items-center gap-3">
                  <CheckCircle className="w-6 h-6" />
                  Verified Certificate
                </CardTitle>
                <Badge variant="secondary" className="bg-secondary/20 text-secondary-foreground">
                  {certificateDetails.status.toUpperCase()}
                </Badge>
              </div>
            </CardHeader>
            <CardContent className="p-8">
              <div className="grid md:grid-cols-2 gap-8">
                <div className="space-y-6">
                  <div className="flex items-start gap-4">
                    <div className="bg-primary/10 p-3 rounded-lg">
                      <User className="w-6 h-6 text-primary" />
                    </div>
                    <div>
                      <h3 className="font-semibold text-foreground mb-1">Student Name</h3>
                      <p className="text-xl font-bold text-primary">{certificateDetails.studentName}</p>
                    </div>
                  </div>

                  <div className="flex items-start gap-4">
                    <div className="bg-secondary/10 p-3 rounded-lg">
                      <Building className="w-6 h-6 text-secondary" />
                    </div>
                    <div>
                      <h3 className="font-semibold text-foreground mb-1">College Name</h3>
                      <p className="text-lg text-foreground">{certificateDetails.collegeName}</p>
                    </div>
                  </div>

                  <div className="flex items-start gap-4">
                    <div className="bg-accent/10 p-3 rounded-lg">
                      <Hash className="w-6 h-6 text-accent" />
                    </div>
                    <div>
                      <h3 className="font-semibold text-foreground mb-1">Registration No</h3>
                      <p className="text-lg font-mono text-foreground">{certificateDetails.registrationNo}</p>
                    </div>
                  </div>
                </div>

                <div className="space-y-6">
                  <div className="flex items-start gap-4">
                    <div className="bg-primary/10 p-3 rounded-lg">
                      <Award className="w-6 h-6 text-primary" />
                    </div>
                    <div>
                      <h3 className="font-semibold text-foreground mb-1">Issued By</h3>
                      <p className="text-lg text-foreground">{certificateDetails.issuedBy}</p>
                    </div>
                  </div>

                  <div className="flex items-start gap-4">
                    <div className="bg-secondary/10 p-3 rounded-lg">
                      <Calendar className="w-6 h-6 text-secondary" />
                    </div>
                    <div>
                      <h3 className="font-semibold text-foreground mb-1">Issued Date</h3>
                      <p className="text-lg text-foreground">{formatDate(certificateDetails.issuedDate)}</p>
                      <p className="text-sm text-muted-foreground">Training Duration: {certificateDetails.trainingDuration}</p>
                    </div>
                  </div>

                  <div className="flex items-start gap-4">
                    <div className="bg-accent/10 p-3 rounded-lg">
                      <Calendar className="w-6 h-6 text-accent" />
                    </div>
                    <div>
                      <h3 className="font-semibold text-foreground mb-1">Last Updated</h3>
                      <p className="text-lg text-foreground">{formatDate(certificateDetails.lastUpdated)}</p>
                    </div>
                  </div>
                </div>
              </div>

              <div className="mt-8 p-4 bg-muted/50 rounded-lg border-l-4 border-secondary">
                <p className="text-sm text-muted-foreground">
                  This certificate has been verified and is authentic. For any queries, please contact the issuing department.
                </p>
              </div>
            </CardContent>
          </Card>
        )}

        {/* Sample Certificate Numbers */}
        <Card className="mt-8 shadow-soft border-0 bg-card/30">
          <CardHeader>
            <CardTitle className="text-lg text-foreground">Sample Certificate Numbers for Testing</CardTitle>
          </CardHeader>
          <CardContent>
            <div className="flex flex-wrap gap-2">
              {Object.keys(certificateData).map((cert) => (
                <Badge 
                  key={cert}
                  variant="outline" 
                  className="cursor-pointer hover:bg-primary/10 transition-colors"
                  onClick={() => setCertificateNo(cert)}
                >
                  {cert}
                </Badge>
              ))}
            </div>
          </CardContent>
        </Card>
      </div>
    </div>
  );
};

export default CertificateVerification;
